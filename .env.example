# GistMe Backend Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# DJANGO SETTINGS
# ===========================================
SECRET_KEY=your-super-secret-key-here
DEBUG=False
ALLOWED_HOSTS=yourusername.pythonanywhere.com,localhost

# Site URL (your production URL)
SITE_URL=https://yourusername.pythonanywhere.com

# CSRF Protection (required for forms in production)
CSRF_TRUSTED_ORIGINS=https://yourusername.pythonanywhere.com

# ===========================================
# PAYMENT (FAPSHI)
# ===========================================
FAPSHI_API_KEY=your-fapshi-api-key
FAPSHI_API_USER=your-fapshi-api-user
FAPSHI_BASE_URL=https://live.fapshi.com

# ===========================================
# EMAIL SETTINGS
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Gist4U Pro <noreply@gist4u.com>

# ===========================================
# FIREBASE (Push Notifications)
# ===========================================
# Place serviceAccountKey.json in project root
# (Already configured in settings.py)

# ===========================================
# VAPID KEYS (Optional - Web Push)
# ===========================================
# VAPID_PUBLIC_KEY=your_public_key
# VAPID_PRIVATE_KEY=your_private_key
